def main():
    t = int(input())
    tcase = 0

    while t > 0:
        tcase += 1
        t -= 1

        n = int(input())
        a = list(map(int, input().split()))

        if sorted(a) == a:
            ans = float('inf')
            for i in range(n - 1):
                now = a[i + 1] - a[i]
                ans = min(ans, now // 2 + 1)
            print(ans)
        else:
            print(0)

if __name__ == "__main__":
    main()